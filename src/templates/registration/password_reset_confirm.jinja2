{% extends 'base.jinja2' %}

{% block title %}
  Password reset
{% endblock %}

{% block header %}
  {% include 'common/header_min.jinja2' %}
{% endblock %}

{% block content %}
    <div class="wrapper">
        <div class="header">
            <h3 class="sign-in">{% trans %}Восстановление пароля (2/2){% endtrans %}</h3>
            <h5>{% trans %}Придумайте новый пароль для учетной записи{% endtrans %}</h5>
        </div>

        <form action="{{ request.path }}" method="post">
            {% csrf_token %}
            <div class="form-row field-password1">
                {{ form.new_password1.errors }}
                <input type="password" name="new_password1" required="" id="id_new_password1"
                       placeholder="{% trans %}Пароль{% endtrans %}">
            </div>
            <div class="form-row field-password2">
                {{ form.new_password2.errors }}
                <input type="password" name="new_password2" required="" id="id_new_password2"
                       placeholder="{% trans %}Подтверждене пароля{% endtrans %}">
            </div>
                    <div>
                <input type="submit" value="{% trans %}Сохранить пароль{% endtrans %}" />
            </div>
        </form>
    </div>

{% endblock %}