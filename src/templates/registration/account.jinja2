{% extends 'base.jinja2' %}

{% block title %}
  {% trans %}Аккаунт{% endtrans %}
{% endblock %}

{% block header %}
  {% include 'common/header_full.jinja2' %}
{% endblock %}

{% block content %}
    <div class="Middle Middle_top">
        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
               {% include 'navigation/navigation.jinja2' %}
                <div class="Section-content">
                    <div class="Account">
                        <div class="Account-group">
                            <div class="Account-column" style="display: flex">
                                <div class="Account-avatar">
                                  {% if user.avatar %}
                                    <img src='{{ user.avatar.url }}' alt="card.jpg" style="background-size: contain"/>
                                  {% else %}
                                    <img src='/static/assets/img/icons/blankphoto.jpg' alt="card.jpg" style="background-size: contain"/>
                                  {% endif %}
                                </div>
                            </div>
                            <div class="Account-column">
                                <div class="Account-name" style="text-transform: capitalize">{{ user.username }}
                                </div><a class="Account-editLink" href="../profile">{% trans %}Редактировать профиль{% endtrans %}</a>
                            </div>
                        </div>
{#                        <div class="Account-group">#}
{#                         <div class="Orders">#}
                        <div class="Cards-browsing-history" style="margin-top: 40px">
                            {% if history %}
                            {% set order = history[0] %}
                                <div class="Order Order_anons">
                                    <div class="Order-personal">
                                        <div class="row">
                                            <div class="row-block">
                                                <a class="Order-title" href="{{ url('cart:order_detail', order.pk) }}">
                                                    {% trans %}Заказ{% endtrans %} №
                                                    <span class="Order-numberOrder">{{ order.id }}</span>
                                                    {% trans %}от{% endtrans %}
                                                    <span class="Order-dateOrder">{{ order.created_at.strftime('%d.%m.%Y') }}</span>
                                                </a>
                                                <a class="menu-link" id="historyorder" href="{{ url('account:historyorder') }}">
                                                    {% trans %}История заказов{% endtrans %}
                                                </a>
                                            </div>
                                            <div class="row-block">
                                                <div class="Order-info Order-info_delivery">
                                                    <div class="Order-infoType">
                                                        {% trans %}Тип доставки:{% endtrans %}
                                                    </div>
                                                    <div class="Order-infoContent">
                                                        {{ order.delivery_type }}
                                                    </div>
                                                </div>
                                                <div class="Order-info Order-info_pay">
                                                    <div class="Order-infoType">
                                                        {% trans %}Оплата:{% endtrans %}
                                                    </div>
                                                    <div class="Order-infoContent">
                                                        {{ order.payment_type }}
                                                    </div>
                                                </div>
                                                <div class="Order-info">
                                                    <div class="Order-infoType">
                                                        {% trans %}Общая стоимость:{% endtrans %}
                                                    </div>
                                                    <div class="Order-infoContent">
                                                        <span class="Order-price">
                                                            {{ order.total_price }}$
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="Order-info Order-info_status">
                                                    <div class="Order-infoType">
                                                        {% trans %}Статус:{% endtrans %}
                                                    </div>
                                                    <div class="Order-infoContent">{{ order.status }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <li>{% trans %}У вас нет заказов.{% endtrans %}</li>
                            {% endif %}
